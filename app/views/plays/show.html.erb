<h2 class="text-center"><%= @play.title %></h2>
<p><%= @play.desc %></p>
<li><Strong>Director Name : </Strong> <%= @play.director %></li>
<li><Strong>Category : </Strong> <%= @play.category.name %></li>
<% if user_signed_in? %>
    <% if @play.user_id == current_user.id %>
<%= link_to 'Edit',edit_play_path(@play),class:"btn btn-outline-warning text-white btn-lg"%>
<%= link_to 'Delete',@play, data: {turbo_method: 'delete', turbo_confirm: "are you sure"},class:"btn btn-outline-danger btn-lg"%>
<% end %>
<% end %>