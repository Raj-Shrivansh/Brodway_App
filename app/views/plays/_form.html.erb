<%= simple_form_for(@play) do |f| %>
<% if @play.persisted? %>
    <h2 class="text-center">Update Play Record</h2>
<% else %>
    <h2 class="text-center">Create Play Recors</h2>
<% end %>
<div class="mb-3">
    <%= f.label :"Title :",class:"form-label"%>
    <%= f.text_field :title,class:"form-control",required:true,placeholder:"Enter Title Here....."%>
    <% if @play.errors.any? %>
    <% @play.errors.full_messages_for(:title).each do |err|%>
        <p style="font-size:1rem;color:red"><%= err %></p>
        <% break %>
    <% end %>
    <% end %>
</div>
<div class="mb-3">
    <%= f.label :"Description :",class:"form-label" %>
    <%= f.text_area :desc,class:"form-control",required:true,placeholder:"Enter Description of your play...."%>
    <% if @play.errors.any? %>
    <% @play.errors.full_messages_for(:desc).each do |err|%>
        <p style="font-size:1rem;color:red"><%= err %></p>
        <% break %>
    <% end %>
    <% end %>
</div>
<div class="mb-3">
    <%= f.label :"Director Name:",class:"form-label"%>
    <%= f.text_field :director,class:"form-control",class:"form-control",required:true,placeholder:"Enter Director Name...."%>
    <% if @play.errors.any? %>
    <% @play.errors.full_messages_for(:director).each do |err|%>
        <p style="font-size:1rem;color:red"><%= err %></p>
        <% break %>
    <% end %>
    <% end %>
</div>
<% if @play.persisted? %>
    <div class="mb-3">
    <%= f.label :"Play Category:",class:"form-label"%> <br>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "Select Play Category",class: "form-select form-select-lg",required:true%>
    <% if @play.errors.any? %>
    <% @play.errors.full_messages_for(:category).each do |err|%>
        <p style="font-size:1rem;color:red"><%= err %></p>
        <% break %>
    <% end %>
    <% end %>
</div>
<% else %>
    <div class="mb-3">
    <%= f.label :"Play Category:",class:"form-label"%> <br>
    <%= f.collection_select :category_id, Category.all, :id, :name, prompt: "Select Play Category",class: "form-select form-select-lg",required:true%>
    <% if @play.errors.any? %>
    <% @play.errors.full_messages_for(:category).each do |err|%>
        <p style="font-size:1rem;color:red"><%= err %></p>
        <% break %>
    <% end %>
    <% end %>
</div>
<% end %>
<div class="row mb-3">
<%= f.label :"Play Image"%>
<%= f.file_field :main_image%>
</div>
<div class="d-grid gap-2 col-6 mx-auto">
<% if @play.persisted? %>
    <%= f.submit "Update Play",class:"btn btn-primary"%>
<% else %>
    <%= f.submit "Add Play",class:"btn btn-primary"%>
<% end %>
<%= link_to 'Back',plays_path,class:"btn btn-warning"%>
</div>
<% end %>