<%= simple_form_for([@play, @play.reviews.build]) do |f| %>
<div class=" row mb-3">
    <%= f.label :"Rating :",class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
        <%= f.number_field :rating,class:"form-control",required:true%>
        <% if f.object.errors.any? %>
            <% f.object.errors.full_messages_for(:rating).each do |err| %>
                <p style="color:red;font-size:1rem"><%= err %></p>
            <% end %>
        <% end %>
    </div>
</div>
<div class="row mb-3">
    <%= f.label :"Comment :",class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
    <%= f.text_field :comment,class:"form-control",required:true%>
    </div>
</div>
<%= f.submit "Add comment",class:"btn btn-info m-auto"%>
<% end %>