<%= simple_form_for([@play, @review]) do |f| %>
<h2 class="text-center">Edit Review</h2>
<div class=" row mb-3">
    <%= f.label :"Rating :",class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
        <%= f.number_field :rating,class:"form-control"%>
    </div>
</div>
<div class="row mb-3">
    <%= f.label :"Comment :",class:"col-sm-2 col-form-label"%>
    <div class="col-sm-10">
    <%= f.text_field :comment,class:"form-control"%>
    </div>
</div>
<%= f.submit "Add comment",class:"btn btn-info m-auto"%>
<% end %>